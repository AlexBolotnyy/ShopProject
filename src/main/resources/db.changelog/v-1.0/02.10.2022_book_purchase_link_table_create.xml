<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="02.10.2022_book_purchase_link_table_create_import_1" author="bolotyi">
        <createTable tableName="book_purchase_link">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="book_id" type="int" remarks="ID книги"/>
            <column name="purchase_id" type="int" remarks="ID покупки"/>
        </createTable>
    </changeSet>
    <changeSet id="02.10.2022_book_purchase_link_table_create_import_2" author="bolotyi">
        <addForeignKeyConstraint baseTableName="book_purchase_link"
                                 baseColumnNames="book_id"
                                 constraintName="book_purchase_link_fk_1"
                                 referencedTableName="book_table"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="02.10.2022_book_purchase_link_table_create_import_3" author="bolotyi">
        <addForeignKeyConstraint baseTableName="book_purchase_link"
                                 baseColumnNames="purchase_id"
                                 constraintName="book_purchase_link_fk_2"
                                 referencedTableName="purchase_table"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>